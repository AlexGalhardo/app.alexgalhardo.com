{{>partials/header}}
	
	{{#user.admin}}

	<main class="container col-lg-10 mt-3 text-center">

        <div class="row" class="text-end d-flex justify-content-between">

        	<form action="/admin/create/tvshow" method="POST">

	        	<div class="mb-3 row">

	        		{{#flash_success}}
                        <div class="text-center alert alert-success" role="alert">
                            <b>{{flash_success}}</b>
                        </div>
                    {{/flash_success}}

                    {{#flash_warning}}
                        <div class="text-center alert alert-warning" role="alert">
                            <b>{{flash_warning}}</b>
                        </div>
                    {{/flash_warning}}

			        <div class="col-lg-6">

			        	<div class="form-floating mb-3">
						  	<input type="number" min="1" class="form-control" name="tvshow_id" id="tvshow_id" value="" required onkeydown="return false;">
						  	<label for="tvshow_id">tvshow_ID</label>
						</div>
					    
					    <div class="form-floating mb-3">
						  	<input type="text" class="form-control" name="tvshow_title" id="tvshow_title" value="" required>
						  	<label for="tvshow_title">tvshow_TITLE</label>
						</div>

						<div class="form-floating mb-3">
						  	<input type="number" min="1990" step="1" max="2021" class="form-control" id="tvshow_year_release" name="tvshow_year_release" value="{{year_release}}" required>
						  	<label for="tvshow_year_release">tvshow_YEAR_RELEASE</label>
						</div>

						<div class="form-floating mb-3">
						  	<input type="text" class="form-control" name="tvshow_image" id="tvshow_image" value="" required>
						  	<label for="tvshow_image">tvshow_IMAGE_LINK</label>
						</div>

					</div>



					<div class="col-lg-6">
						<div class="form-floating mb-3">
						  	<input type="text" class="form-control" name="tvshow_genres" id="tvshow_genres" required>
						  	<label for="tvshow_genres">tvshow_GENRES</label>
						</div>

						<div class="form-floating mb-3">
						  	<input type="text" class="form-control" name="tvshow_author" id="tvshow_author" required>
						  	<label for="tvshow_author">tvshow_DURATION</label>
						</div>

						<div class="form-floating">
						  	<textarea style="height: 300px" class="form-control" name="tvshow_resume" id="tvshow_resume" required></textarea>
						  	<label for="tvshow_resume">tvshow_RESUME</label>
						</div>
					</div>
					
				</div>

				<button type="submit" class="mb-5 w-25 btn btn-outline-primary shadow">
	        		Create Book
	        	</button>

			</form>

        </div>

    </main>

    {{/user.admin}}

{{>partials/footer}}
