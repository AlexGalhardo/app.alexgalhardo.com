                    enctype="multipart/form-data"
                    class="col-lg-8">
                
                    <img src="{{avatar}}" class="d-block mx-auto w-50 h-50 image-fluid rounded-circle" alt="avatar">

                    <br>
                    
                    <input class="form-control mb-2" type="file" id="avatar" name="avatar">
                    
                    <button disabled class="btn btn-sm btn-outline-primary shadow" type="submit">
                        <i class="bi bi-upload"></i>  
                        Upload Avatar
                    </button>
                </form>

                <hr>

                <div class="form-floating mb-3">
                      <input class="mb-2 form-control" name="created_at" type="text" value="{{created_at}}" readonly>
                      <label for="name">CREATED_AT</label>
                </div>

                <div class="form-floating mb-3">
                      <input class="mb-2 form-control" name="updated_at" type="text" value="{{updated_at}}" readonly>
                      <label for="name">LAST_UPDATED_AT</label>
                </div>

                <div class="form-floating mb-3">
                      <input class="mb-2 form-control" name="admin" type="text" value="{{admin}}" readonly>
                      <label for="admin">ADMIN</label>
                </div>

                <div class="form-floating mb-3">
                      <input class="mb-2 form-control" name="operation_system" id="operation_system" type="text" readonly>
                      <label for="operation_system">OPERATION_SYSTEM</label>
                </div>

