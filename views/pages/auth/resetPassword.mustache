<html lang="en-US">

<head>

    <title>Reset Password</title>

    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

</head>

<body class="bg-light">

    <div class="container col-lg-3 mt-5">

        <h2 class="text-center text-muted mb-4">
            <a class="text-decoration-none" href="/">
                <b>
                    <i class="bi bi-cup-straw"></i>
                    Galhardo APP
                </b>
            </a>
        </h2>

        {{#flash_success}}
            <div class="text-center alert alert-success" role="alert">
                <b>{{flash_success}}</b>
            </div>
        {{/flash_success}}

        {{#flash_warning}}
            <div class="text-center alert alert-warning" role="alert">
                <b>{{flash_warning}}</b>
            </div>
        {{/flash_warning}}

        <form action="/resetPassword" method="POST" id="form_reset_password">

            <div class="form-floating mb-3">
                <input type="email" class="mb-3 form-control" id="email" name="email" required value="{{email}}" readonly>
                <label for="email">Email</label>
            </div>

            <small><span id="alert_password" class="fw-bold text-danger"></span></small>

            <div class="form-floating mb-3">
                <input type="password" class="mb-3 form-control" id="new_password" name="new_password" placeholder="Enter your new password" required value="">
                <label for="new_password">New Password</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" class="mb-3 form-control" id="confirm_new_password" name="confirm_new_password" placeholder="Confirm new password" required value="">
                <label for="confirm_new_password">Confirm New Password</label>
            </div>

            <div class="form-group">
                <button type="submit" class="shadow mb-3 w-100 btn btn-info btn-block login-btn" id="button_reset_password">
                    Reset My Password
                </button>
            </div>

        </form>

    </div>

    <script src="../../scripts/reset_password.js"></script>

</body>

</html>
